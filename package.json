{
  "name": "@lvce-editor/measure-memory",
  "version": "0.0.0-dev",
  "license": "MIT",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "build": "node scripts/build.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "measure": "node --experimental-strip-types src/measureMemory.ts",
    "measure:visible": "node --experimental-strip-types src/measureMemory.ts --no-headless",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 15,
        "lines": 25,
        "statements": 25
      }
    }
  },
  "dependencies": {
    "chrome-remote-interface": "^0.33.3",
    "execa": "^9.6.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@lerna/legacy-package-management": "^8.2.4",
    "@lvce-editor/eslint-config": "^2.13.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/express": "^4.17.21",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "lerna": "^8.2.4",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
